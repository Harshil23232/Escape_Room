  <script>
    function askFaq() {
      const question = document.getElementById("faq-question").value.toLowerCase();
      let answer = "Our AI is thinking... please rephrase or try again.";
      if (question.includes("age")) {
        answer = "Our escape rooms are recommended for ages 12 and up. Families are welcome!";
      } else if (question.includes("price")) {
        answer = "Pricing starts at $29.99 per person with group discounts available.";
      }
      document.getElementById("faq-answer").innerText = answer;
    }
  </script>

import { useState } from "react";
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Dialog, DialogTrigger, DialogContent } from "@/components/ui/dialog";
import { Calendar } from "@/components/ui/calendar";
import { FaRobot, FaPhone, FaMapMarkerAlt } from "react-icons/fa";

export default function EscapeOManiaSite() {
  const [bookingDate, setBookingDate] = useState<Date | undefined>(undefined);
  const [faqQuestion, setFaqQuestion] = useState("");
  const [faqAnswer, setFaqAnswer] = useState<string | null>(null);

  const handleFaq = () => {
    // Simulated AI logic
    if (faqQuestion.toLowerCase().includes("age")) {
      setFaqAnswer("Our escape rooms are recommended for ages 12 and up. Families are welcome!");
    } else if (faqQuestion.toLowerCase().includes("price")) {
      setFaqAnswer("Pricing starts at $29.99 per person with group discounts available.");
    } else {
      setFaqAnswer("Our AI is thinking... please rephrase or try again.");
    }
  };

  return (
    <main className="p-4 max-w-4xl mx-auto text-center">
      <h1 className="text-4xl font-bold mb-4">Escape-O-Mania</h1>
      <p className="text-lg mb-6">Immersive Escape Rooms & Arcade Fun in Monmouth Junction, NJ</p>

      <section className="mb-8">
        <Card>
          <CardContent className="p-6">
            <h2 className="text-2xl font-semibold mb-2">Book Your Experience</h2>
            <Calendar mode="single" selected={bookingDate} onSelect={setBookingDate} className="mx-auto" />
            <Button className="mt-4">Confirm Booking</Button>
          </CardContent>
        </Card>
      </section>

      <section className="mb-8">
        <Card>
          <CardContent className="p-6">
            <h2 className="text-2xl font-semibold mb-2 flex items-center justify-center gap-2">
              <FaRobot /> Ask Our AI FAQ Bot
            </h2>
            <Input
              placeholder="Type your question..."
              value={faqQuestion}
              onChange={(e) => setFaqQuestion(e.target.value)}
            />
            <Button onClick={handleFaq} className="mt-2">Ask</Button>
            {faqAnswer && <p className="mt-4 bg-gray-100 p-2 rounded">{faqAnswer}</p>}
          </CardContent>
        </Card>
      </section>

      <section className="mb-8">
        <Card>
          <CardContent className="p-6">
            <h2 className="text-2xl font-semibold mb-2 flex items-center justify-center gap-2">
              <FaPhone /> Direct Support
            </h2>
            <p>Need help? Text or call us at <strong>(555) 123-ESCAPE</strong></p>
            <Textarea placeholder="Write a message..." className="mt-4" />
            <Button className="mt-2">Send Message</Button>
          </CardContent>
        </Card>
      </section>

      <section className="mb-8">
        <Dialog>
          <DialogTrigger asChild>
            <Button className="w-full">üé• Virtual Tour</Button>
          </DialogTrigger>
          <DialogContent>
            <h2 className="text-xl font-bold mb-2">Escape Room Virtual Tour</h2>
            <iframe
              src="https://www.youtube.com/embed/dQw4w9WgXcQ"
              title="Virtual Tour"
              className="w-full aspect-video rounded-lg"
              allowFullScreen
            ></iframe>
          </DialogContent>
        </Dialog>
      </section>

      <footer className="text-sm text-gray-500 mt-12">
        <p><FaMapMarkerAlt className="inline mr-1" /> Located in Monmouth Junction, NJ</p>
        <p>¬© 2025 Escape-O-Mania. All rights reserved.</p>
      </footer>
    </main>
  );
}


